/* pages/my/about/about.wxss */

.container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  display: block;
  margin: auto;
}

.qrcode {
  width: 256rpx;
  height: 256rpx;
  display: block;
  margin: auto;
}

.item {
  line-height: 2.2em;
  background: #fff;
  padding: 10rpx 30rpx 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.item .title {
  font-size: 32rpx;
  color: #57bae8;
  margin: 26rpx 0;
}

.item .i {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  position: relative;
  padding-bottom: 16rpx;
}

.i .icon {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 2.2em;
}

.i image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.item .text {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 1;
}

.item .btn {
  position: absolute;
  z-index: 2;
  width: 100%;
  height: 100%;
  top: 0;
  left: 1;
  opacity: 0;
}

.footer {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 80rpx;
  font-size: 24rpx;
  color: #333;
  margin-top: 30rpx;
}
